{
  "info": {
    "name": "ExamPro API Testing Collection",
    "description": "Complete API testing collection for the Exam Taking Application using Supabase backend",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "supabase_url",
      "value": "https://your-project.supabase.co",
      "type": "string"
    },
    {
      "key": "supabase_anon_key",
      "value": "your-anon-key-here",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "exam_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"data\": {\n    \"full_name\": \"Test User\"\n  }\n}"
            },
            "url": {
              "raw": "{{supabase_url}}/auth/v1/signup",
              "host": ["{{supabase_url}}"],
              "path": ["auth", "v1", "signup"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{supabase_url}}/auth/v1/token?grant_type=password",
              "host": ["{{supabase_url}}"],
              "path": ["auth", "v1", "token"],
              "query": [
                {
                  "key": "grant_type",
                  "value": "password"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "    pm.collectionVariables.set('user_id', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/auth/v1/user",
              "host": ["{{supabase_url}}"],
              "path": ["auth", "v1", "user"]
            }
          },
          "response": []
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/auth/v1/logout",
              "host": ["{{supabase_url}}"],
              "path": ["auth", "v1", "logout"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Exams",
      "item": [
        {
          "name": "Get All Exams",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exams?is_active=eq.true&order=created_at.desc",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exams"],
              "query": [
                {
                  "key": "is_active",
                  "value": "eq.true"
                },
                {
                  "key": "order",
                  "value": "created_at.desc"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.length > 0) {",
                  "        pm.collectionVariables.set('exam_id', response[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Get Exam by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exams?id=eq.{{exam_id}}",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exams"],
              "query": [
                {
                  "key": "id",
                  "value": "eq.{{exam_id}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Questions",
      "item": [
        {
          "name": "Get Random Questions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/rest/v1/questions?limit=10&order=random()",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "questions"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "order",
                  "value": "random()"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Questions by Category",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/rest/v1/questions?category=eq.javascript&limit=5",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "questions"],
              "query": [
                {
                  "key": "category",
                  "value": "eq.javascript"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Exam Sessions",
      "item": [
        {
          "name": "Create Exam Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Prefer",
                "value": "return=representation"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"exam_id\": \"{{exam_id}}\",\n  \"user_id\": \"{{user_id}}\",\n  \"questions\": [],\n  \"answers\": {},\n  \"started_at\": \"2024-01-15T10:00:00Z\",\n  \"is_completed\": false\n}"
            },
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exam_sessions",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exam_sessions"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.length > 0) {",
                  "        pm.collectionVariables.set('session_id', response[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Get User Exam Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exam_sessions?user_id=eq.{{user_id}}&order=created_at.desc",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exam_sessions"],
              "query": [
                {
                  "key": "user_id",
                  "value": "eq.{{user_id}}"
                },
                {
                  "key": "order",
                  "value": "created_at.desc"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Exam Session (Submit Answers)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answers\": {\n    \"question_id_1\": 0,\n    \"question_id_2\": 2,\n    \"question_id_3\": 1\n  },\n  \"submitted_at\": \"2024-01-15T10:30:00Z\",\n  \"is_completed\": true,\n  \"score\": 85\n}"
            },
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exam_sessions?id=eq.{{session_id}}",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exam_sessions"],
              "query": [
                {
                  "key": "id",
                  "value": "eq.{{session_id}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Exam Results",
      "item": [
        {
          "name": "Create Exam Result",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Prefer",
                "value": "return=representation"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"exam_session_id\": \"{{session_id}}\",\n  \"user_id\": \"{{user_id}}\",\n  \"exam_id\": \"{{exam_id}}\",\n  \"score\": 85,\n  \"total_questions\": 10,\n  \"correct_answers\": 8,\n  \"time_taken_minutes\": 25,\n  \"passed\": true\n}"
            },
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exam_results",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exam_results"]
            }
          },
          "response": []
        },
        {
          "name": "Get User Exam Results",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exam_results?user_id=eq.{{user_id}}&select=*,exam_sessions(*,exams(*))&order=created_at.desc",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exam_results"],
              "query": [
                {
                  "key": "user_id",
                  "value": "eq.{{user_id}}"
                },
                {
                  "key": "select",
                  "value": "*,exam_sessions(*,exams(*))"
                },
                {
                  "key": "order",
                  "value": "created_at.desc"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Result by Session ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{supabase_url}}/rest/v1/exam_results?exam_session_id=eq.{{session_id}}&select=*,exam_sessions(questions,answers,exams(title,description,passing_score))",
              "host": ["{{supabase_url}}"],
              "path": ["rest", "v1", "exam_results"],
              "query": [
                {
                  "key": "exam_session_id",
                  "value": "eq.{{session_id}}"
                },
                {
                  "key": "select",
                  "value": "*,exam_sessions(questions,answers,exams(title,description,passing_score))"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}